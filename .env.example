# Qdrant Configuration (Cloud Free Tier)
QUADRANT_URL=https://your-cluster.europe-west3-0.gcp.cloud.qdrant.io
QUADRANT_API_KEY=your_qdrant_api_key_here

# Neon Serverless Postgres Configuration
POSTGRES_URL=postgresql://user:password@ep-xxx.us-east-1.aws.neon.tech/dbname?sslmode=require&channel_binding=require

# LLM Configuration
MODEL_PROVIDER=gemini
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta

# CORS Configuration - Update with your GitHub Pages URL
BACKEND_CORS_ORIGINS=["http://localhost:3000", "https://yourusername.github.io"]

# Application Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Performance Configuration
MAX_CONCURRENT_USERS=10
RESPONSE_TIMEOUT=30
RETRIEVAL_TOP_K=5

# Frontend Backend Configuration (for chatbot UI)
# Local development: http://localhost:8000
# Deployed production: https://syedmuhammadanasmaududi-rag-chabot.hf.space

# Backend URL (required) - Set to local backend for development or deployed backend for production
BACKEND_URL=http://localhost:8000

# Streaming endpoint path (optional, defaults to /api/chat/stream)
STREAMING_ENDPOINT=/api/chat/stream

# Request timeout in milliseconds (optional, defaults to 30000 = 30 seconds)
TIMEOUT_MS=30000

# Number of retry attempts on network failures (optional, defaults to 3)
RETRY_ATTEMPTS=3

# Retry delay in milliseconds for exponential backoff (optional, defaults to 1000 = 1 second)
RETRY_DELAY_MS=1000

# Message limit before cleanup (optional, defaults to 100)
MESSAGE_LIMIT=100
